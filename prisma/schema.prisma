model User {
  id             String   @id @default(cuid())
  email          String   @unique
  hashedPassword String
  hasAccess      Boolean  @default(false)
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
  pets           Pet[]
}

model Pet {
  id        String   @id @default(cuid())
  name      String
  ownerName String
  imageUrl  String
  age       Int
  notes     String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
